generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orgs Org[]
  
}

model Org {
  id          String @id @default(uuid())
  name        String
  description String?
  users       User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
}